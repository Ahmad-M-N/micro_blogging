<%= form_with(model: @user, local: true) do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirmation"%>
  <%= f.password_field :password_confirmation %>

  <%= f.submit yield(:submit_btn_text), class: "btn btn-primary"%>
<% end %>